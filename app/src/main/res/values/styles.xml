<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/SolidActionBar</item>
    </style>

    <style name="SolidActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:icon">@color/transparent</item>
    </style>

    <style name="PhotoTheme" parent="android:Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/PhotoActionBar</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="PhotoActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/grayTranslucent</item>
        <item name="android:icon">@color/transparent</item>
    </style>

</resources>
